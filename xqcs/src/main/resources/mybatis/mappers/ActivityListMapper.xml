  <select id="findByAddress" resultMap="BaseResultMap">
		SELECT * from activity_list where address = #{address,jdbcType=VARCHAR}
	</select>
  <select id="findByKeyword" parameterType="com.xunqi.pojo.ActivityList" resultMap="BaseResultMap">
		SELECT * FROM activity_list WHERE 		
            address =  #{address,jdbcType=VARCHAR}      
           and activity_title LIKE  CONCAT(CONCAT('%',#{activityTitle,jdbcType=VARCHAR}),'%')       
	</select>
